##4.1
import random


secret = random.randint(1, 10)


guess = random.randint(1, 10)


print(f"Secret: {secret}")
print(f"Guess: {guess}")


if guess < secret:
    print("low")
elif guess > secret:
    print("high")
else:
    print("right")


##4.2


small = True
green = False


if small and green:
    print("Matches: pea")
elif small and not green:
    print("Matches: cherry")
elif not small and green:
    print("Matches: watermelon")
else:
    print("Matches: pumpkin")


    ##6.2

    
guess_me = 7
number = 1


while number <= guess_me:
    if number < guess_me:
        print('low')
    elif number == guess_me:
        print('got it')
        break  
    else:
        print('wrong')
        break  
    
   
    number += 1


##6.3

guess_me = 5


for number in range(10):
    if number < guess_me:
        print('low')
    elif number == guess_me:
        print('got it!')
        break  
    else:
        print('wrong')
        break  

